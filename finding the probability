#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	while(t--)
	{
	    int n,a,b,c=0,d=0;
	    cin>>n>>a>>b;
	    int arr[n];
	    for(int i=0;i<n;i++)
	    {
	        cin>>arr[i];
	    }
	    for(int i=0;i<n;i++)
	    {
	        if(arr[i]==a)
	        {
	            c++;
	        }
	    }
	    double l = (double) c/n;
	    
	    for(int i=0;i<n;i++)
	    {
	        if(arr[i]==b)
	        {
	            d++;
	        }
	    }
	    double m = (double) d/n;
	    cout<<(l*m)<<endl;
	}
	return 0;
}
