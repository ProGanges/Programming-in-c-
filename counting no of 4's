#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	while(t--)
	{
	    long int n;
	    cin>>n;
	    int c=0;
	    while(n)
	    {
	        int k = n%10;
	        if (k==4)
	        {
	            c++;
	        }
	        n=n/10;
	    }
	    cout<<c<<endl;
	}
	return 0;
}
